<div class="d-flex justify-content-center row">
  <div class="col-8 row">
    <!-- danh muc -->

    <ul
      class="row col-12 d-flex justify-content-center align-items-center"
      style="
        box-shadow: 2px 2px 4px #000000;
        background-color: #198754;
        border-radius: 15px;
        list-style-type: none;
      "
    >
      <!-- 1 the danh muc  -->
      <% for (var i = 0; i < data.categorys.length; i++) { %>
      <li class="my-3 col row d-flex justify-content-center">
        <a
          href="/menu?category=<%= data.categorys[i].id %>"
          class="btn btn-light col-10"
        >
          <%= data.categorys[i].name %>
        </a>
      </li>
      <!-- --------------  -->
      <%}%>
    </ul>

    <!-- -------- -->
  </div>
</div>
<main
  class="d-flex justify-content-center"
  style="background-image: url(/imgs/static/bg-top.png); background-size: cover"
>
  <div class="container row d-flex justify-content-between">
    <!-- 1 the san pham -->
    <% data.products.forEach(function (product){ %>
    <div class="col d-flex justify-content-center my-5">
      <div class="card" style="width: 18rem">
        <img
          src="imgs/products/<%= product.image %>"
          class="card-img-top"
          alt="Ảnh <%= product.name %>"
        />
        <div class="card-body">
          <h5
            style="height: 50px"
            class="card-title d-flex justify-content-center"
          >
            <%= product.name %>
          </h5>
          <h5 class="card-title d-flex justify-content-center">
            <%= product.currentPrice %>
          </h5>
          <a
            data-bs-toggle="modal"
            data-bs-target="#staticBackdrop"
            class="btn btn-success d-flex justify-content-center"
            >Đặt Hàng Ngay</a
          >
        </div>
      </div>
    </div>
    <%})%>
    <!-- -------------- -->
  </div>
</main>

<div
  class="modal fade"
  id="staticBackdrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body row">
        <div class="col-4">
          <img src="" class="card-img-top" alt="Ảnh + tên món ăn" />
        </div>
        <div class="col">
          <div>
            <!-- mô tả món ăn -->
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Facere
              officia perspiciatis nobis, aut deleniti facilis velit quaerat
              architecto sed alias exercitationem odio sit nihil rem vitae quae
              quos minus! Odio.
            </p>
          </div>
          <div>
            <strong class="h5 mb-3">Danh Sách món ăn kèm</strong>
            <div class="row d-flex justify-content-around align-items-center">
              <div class="col-2">
                <img
                  src="https://beptueu.vn/hinhanh/tintuc/top-15-hinh-anh-mon-an-ngon-viet-nam-khien-ban-khong-the-roi-mat-3.jpg"
                  alt=""
                  width="100"
                />
              </div>
              <div class="col-4"><p class="h6">Ten Mon An Kem</p></div>
              <div class="col-2">
                <div class="input-group mb-3">
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="button-minus-Addmore"
                  >
                    <i class="bi bi-dash"></i>
                  </button>
                  <input
                    id="quantity-Addmore"
                    type="number"
                    class="form-control"
                    placeholder=""
                    aria-label="Example text with button addon"
                    aria-describedby="button-addon1"
                    min="0"
                    max="100"
                    oninput="validity.valid||(value='');"
                    value="0"
                  />
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="button-plus-Addmore"
                  >
                    <i class="bi bi-plus"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success">Thêm Vào Giỏ Hàng</button>
      </div>
    </div>
  </div>
</div>
<!-- CSS xoa mui ten cua input number -->
<style>
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>
