<div class="container-fluid">
  <div class="row">
    <nav
      class="col-md-3 col-lg-2 bg-success d-md-block text-white min-vh-100 p-4 rounded"
    >
      <h6 class="text-center">THÔNG TIN TÀI KHOẢN</h6>
      <ul class="nav flex-column text-center p-3">
        <li class="nav-item">
          <a
            class="nav-link text-white active"
            href="/profile/<%= data.user.id %>"
            ><i class="bi bi-person-circle"></i> Quản lý tài khoản</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/listAddress"
            ><i class="bi bi-gear"></i> Quản lý địa chỉ</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/historyProduct"
            ><i class="bi bi-chat-dots"></i> Lịch sử đặt hàng</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/rePassword"
            ><i class="bi bi-bell"></i> Đặt lại mật khẩu</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/deleteAccount"
            ><i class="bi bi-box-arrow-right"></i> Xóa tài khoản</a
          >
        </li>
      </ul>
    </nav>
    <form method="POST" action="/api/changePassword">
      <div class="col-md-9 ms-sm-auto mt-4">
        <h1 class="text-center">ĐẶT LẠI MẬT KHẨU</h1>
        <div class="row g-3 mt-2">
          <div class="col-md-12">
            <label for="current-password" class="form-label"
              >Mật khẩu hiện tại *</label
            >
            <input
              type="password"
              class="form-control"
              id="current-password"
              name="password"
              placeholder="Nhập mật khẩu hiện tại"
            />
          </div>

          <div class="col-md-12">
            <label for="new-password" class="form-label">Mật khẩu mới *</label>
            <input
              type="password"
              class="form-control"
              id="new-password"
              name="newPassword"
              placeholder="Nhập mật khẩu mới"
            />
          </div>

          <div class="col-md-12">
            <label for="confirm-password" class="form-label"
              >Xác nhận mật khẩu *</label
            >
            <input
              type="password"
              class="form-control"
              id="confirm-password"
              placeholder="Nhập lại mật khẩu mới"
            />
          </div>

          <div class="col-12 text-center">
            <button type="submit" class="btn w-100 btn-success">
              Xác nhận
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
