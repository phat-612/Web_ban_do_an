<!-- lấy coppy form tiêu đề này qua mấy trang khác cho đồng bộ -->
<div class="d-flex justify-content-center mt-3">
  <h3>GỬI PHẢN HỒI</h3>
</div>
<!-- ----- -->
<form action="api/sendFeedback" method="post">
  <div class="d-flex justify-content-center">

    <div class="container">
      <div class="row d-flex justify-content-center my-3">
        <div class="col-2">
          <label class=" form-label h6" for="">Họ và tên: *</label>
        </div>
        <div class="col-5">
          <input name="name" type="text" class="form-control">
        </div>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <div class="col-2">
          <label class=" form-label h6" for="">Email: *</label>
        </div>
        <div class="col-5">
          <input name="email" type="text" class="form-control">
        </div>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <div class="col-2">
          <label class=" form-label h6" for="">Tiêu đề: *</label>
        </div>
        <div class="col-5">
          <input name="title" type="text" class="form-control">
        </div>
      </div>
      <div class="row d-flex justify-content-center my-3">
        <div class="col-2">
          <label class=" form-label h6" for="">Nội dung: *</label>
        </div>
        <div class="col-5">
          <textarea name="content" id="" class="form-control" style="resize: none; height: 150px;" required></textarea>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-success" type="submit">Gửi</button>
      </div>
    </div>

  </div>
</form>
<script>
  // giới hạn nội dung của textarea là 500 ký tự
  document.querySelector('textarea').addEventListener('input', function() {
    if (this.value.length > 500) {
      this.value = this.value.slice(0, 500);
    }
  });
  // khi submit form thì kiểm tra nội dung của textarea và trim các trường input
  document.querySelector('form').addEventListener('submit', function(e) {
    e.preventDefault();
    let name = document.querySelector('input[name="name"]').value.trim();
    let email = document.querySelector('input[name="email"]').value.trim();
    let title = document.querySelector('input[name="title"]').value.trim();
    let content = document.querySelector('textarea').value.trim();
    if (content.length === 0) {
      alert('Nội dung không được để trống');
      return;
    }
    this.submit();
  });
</script>