<!-- lấy coppy form tiêu đề này qua mấy trang khác cho đồng bộ -->
<div class="d-flex justify-content-center mt-3">
  <h3>XEM PHẢN HỒI</h3>
</div>
<!-- ----- -->
<style>
  .one-row {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="col-1">STT</th>
        <th class="col-2">Tên Người Gửi</th>
        <th class="col-2">Tiêu Đề</th>
        <th class="col-3">Email</th>
        <th>Nội Dung</th>
        <th class="col-1">Ngày Gửi</th>
      </tr>
    </thead>
    <tbody>
      <% data.feedbacks.forEach(function(feedback, index) { %>
      <tr>
        <th><%= index+1 %></th>
        <td><%= feedback.name %></td>
        <td><%= feedback.title %></td>
        <td><%= feedback.email %></td>
        <td
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
          data-bs-content="<%= feedback.content %>"
          class="td-content"
          style=" overflow: hidden; -webkit-line-clamp: 1; display: -webkit-box; text-overflow: ellipsis; -webkit-box-orient: vertical; line-height: 2.4rem; "
        >
          <%= feedback.content %>
        </td>
        <td><%= feedback.created_at %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<!-- Modal -->
<div
  class=" modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">
          <p>Nội dung phản hồi</p>
        </div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body area-fullcontent"></div>
    </div>
  </div>
</div>
