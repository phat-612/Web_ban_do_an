<!-- lấy coppy form tiêu đề này qua mấy trang khác cho đồng bộ -->
<div class="d-flex justify-content-center mt-3">
  <h3>QUẢN LÝ ĐƠN HÀNG</h3>
</div>
<!-- ----- -->
<div class="container">
  <!-- Tìm kiếm -->
  <div class="searchbox w-100 d-flex justify-content-end mb-3">
    <form class="d-flex">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Nhập Tên Người Dùng"
        aria-label="Search"
      />
      <button class="btn btn-outline-success" type="submit">TÌM</button>
    </form>
  </div>
  <!-- Bảng đơn hàng -->
  <div class="">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Món Ăn</th>
          <th>Tên Khách Hàng</th>
          <th>Thời Gian Đặt Hàng</th>
          <th>Thành Tiền</th>
          <th>Trạng Thái</th>
          <th>Hành Động</th>
        </tr>
      </thead>
      <tbody>
        <% if (data.orderList && data.orderList.length > 0) { %> <%
        data.orderList.forEach((order, index) => { %> <%
        data.orderDetail.forEach((product, productIndex) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= product.id %></td>
          <td><%= order.name %></td>
          <td><%= order.created_at %></td>
          <td><%= order.total %></td>
          <td><%= order.status %></td>
          <td>
            <button
              type="button"
              class="btn btn-success"
              data-bs-toggle="modal"
              data-bs-target="#ModalXemOrder"
            >
              <i class="bi bi-eye-fill"></i>
            </button>
          </td>
        </tr>
        %> <% }) %> <% }) %> <% } else { %>
        <tr>
          <td colspan="7" class="text-center">Không có đơn hàng nào</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

