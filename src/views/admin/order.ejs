<script>
  // JavaScript for updating the progress bar width based on the selected stage
  const stages = ["btncheck1", "btncheck2", "btncheck3", "btncheck4"];
  const progressBar = document.getElementById("orderProgressBar");

  stages.forEach((stage, index) => {
    document.getElementById(stage).addEventListener("change", function () {
      // Update progress bar width based on the stage index
      const progressPercentage = (index + 1) * 25;
      progressBar.style.width = `${progressPercentage}%`;
      progressBar.setAttribute("aria-valuenow", progressPercentage);
    });
  });
</script>
