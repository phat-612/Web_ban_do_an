<!-- lấy coppy form tiêu đề này qua mấy trang khác cho đồng bộ -->
<div class="d-flex justify-content-center mt-3">
  <h3>CẬP NHẬT THÔNG TIN CỬA HÀNG</h3>
</div>
<!-- ----- -->
<form action="" method="post" class="pb-5">
  <div class="container w-50">
    <div class="mb-3">
      <label for="" class="form-label">Tên Cửa Hàng :</label>
      <input type="text" class="form-control" id="" placeholder="Nhập Tên Cửa Hàng">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Số Điện Thoại :</label>
      <input type="tel" class="form-control" id="" placeholder="Nhập Số Điện Thoại">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Mã Số Thuế :</label>
      <input type="text" class="form-control" id="" placeholder="Nhập Mã Số Thuế">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Email :</label>
      <input type="email" class="form-control" id="" placeholder="Nhập Email">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Địa Chỉ :</label>
      <input type="text" class="form-control" id="" placeholder="Nhập Địa Chỉ">
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Giờ Hoạt Động :</label>
      <div class="row">
        <div class="col-6 mb-3">
          <label for="" class="form-label">Giờ Mở Cửa :</label>
          <input type="time" class="form-control">
        </div>
        <div class="col-6 mb-3">
          <label for="" class="form-label">Giờ Đóng Cửa :</label>
          <input type="time" class="form-control">

        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">CẬP NHẬT</button>
    </div>
  </div>
</form>