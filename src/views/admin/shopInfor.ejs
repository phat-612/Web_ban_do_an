<!-- lấy coppy form tiêu đề này qua mấy trang khác cho đồng bộ -->
<div class="d-flex justify-content-center mt-3">
  <h3>CẬP NHẬT THÔNG TIN CỬA HÀNG</h3>
</div>
<!-- ----- -->
<form action="/api/updateShopInfo" method="post" class="pb-5">
  <div class="container w-50">
    <div class="mb-3">
      <label for="" class="form-label">Tên Cửa Hàng :</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id=""
        placeholder="Nhập Tên Cửa Hàng"
        value="<%= data.shopInfo.name %>"
      />
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Số Điện Thoại :</label>
      <input
        name="phone"
        type="tel"
        class="form-control"
        id=""
        placeholder="Nhập Số Điện Thoại"
        value="<%= data.shopInfo.phone %>"
      />
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Mã Số Thuế :</label>
      <input
        name="taxCode"
        type="text"
        class="form-control"
        id=""
        placeholder="Nhập Mã Số Thuế"
        value="<%= data.shopInfo.taxCode %>"
      />
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Email :</label>
      <input
        name="email"
        type="email"
        class="form-control"
        id=""
        placeholder="Nhập Email"
        value="<%= data.shopInfo.email %>"
      />
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Địa Chỉ :</label>
      <input
        name="address"
        type="text"
        class="form-control"
        id=""
        placeholder="Nhập Địa Chỉ"
        value="<%= data.shopInfo.address %>"
      />
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Giờ Hoạt Động :</label>
      <input
        name="activeTime"
        type="text"
        class="form-control"
        id=""
        placeholder="Nhập Giờ Hoạt Động"
        value="<%= data.shopInfo.activeTime %>"
      />
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">CẬP NHẬT</button>
    </div>
  </div>
</form>
