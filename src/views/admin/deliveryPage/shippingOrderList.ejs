<div class="d-flex flex-column justify-content-center px-1">
    <% data.orderList.forEach(function(order){ %> 
    <!-- day la 1 the don hàng -->
    <div class="row w-100 mt-1 bg-primary text-white rounded-3">
        <div class="col-3 p-2">
            <img class="w-100"
                src="/imgs/products/<%= order.image %>"
                alt="anh mon an">
        </div>
        <div class="col-9">
            <div class="w-100 row">
                <div class="col-8">
                    <p><%= order.customer_name %></p>
                </div>
                <div class="col-4">
                    <p><strong>13</strong>km</p>
                </div>
                <div class="col-6">
                    <p>Thời gian: <strong>10</strong>p</p>
                </div>
                <div class="col-6">
                    <p>Mã:<strong><%= order.order_id %></strong></p>
                </div>
            </div>
            <div class="col-12 d-flex justify-content-center mb-1">
                <a href="/admin/deliveryList/detail/<%= order.order_id %>" onclick="return ThongBao()" class="startDeliveryBtn btn btn-success w-75">Bắt Đầu giao</a>
            </div>
        </div>
    </div>
    <% }); %>
</div>



<script>
    function ThongBao() {
        return confirm("Bạn có chắc chắn muốn bắt đầu giao hàng?");
    }
</script>