<!-- lấy coppy form tiêu đề này qua mấy trang khác cho đồng bộ -->
<div class="d-flex justify-content-center mt-3">
  <h3>QUẢN LÝ TÀI KHOẢN</h3>
</div>
<!-- ----- -->
<div class="container">
  <!-- tìm kiếm này cũng coppy cho đồng bộ -->
  <div class="searchbox w-100 d-flex justify-content-end">
    <form class="d-flex">
      <input class="form-control me-2" name="find" type="search" placeholder="Nhập Tên Người Dùng" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">TÌM</button>
    </form>
  </div>
  <!-- ----- -->
  <div class="">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Tên Khách Hàng</th>
          <th scope="col">Email</th>
          <th scope="col">Số Điện Thoại</th>
          <th scope="col">Quyền</th>
          <th scope="col">Trạng Thái</th>
        </tr>
      </thead>
      <tbody>
        <% data.users.forEach(function(user,index) { %>
          <tr>
            <th><%= index +1 %></th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td class="col-2">
              <form action="/api/updateRoleUser" method="post">
                <select class="form-select selectChangeRole" name="role">
                  <option value="0" <%= user.role == 0 ? "selected" : "" %>>Admin</option>
                  <option value="1" <%= user.role == 1 ? "selected" : "" %>>Người Dùng</option>
                </select>
                <input type="text" name="idUser" value="<%= user.id %>" hidden>
              </form>
            </td>
            <td class="col-2">
              <form action="/api/updateStatusUser" method="post">
                <select class="form-select selectChangeStatus" name="status" id="">
                  <option value="1" <%= user.status == 1 ? "selected" : "" %>>Đang Hoạt Động</option>
                  <option value="2" <%= user.status == 2 ? "selected" : "" %>>Tạm Ngưng</option>
                  <option value="3" <%= user.status == 3 ? "selected" : "" %>>Vô Hiệu Hóa</option>
                </select>
                <input type="text" name="idUser" value="<%= user.id %>" hidden>
            </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- đang hoạt động, tạm ngưng, vô hiệu hóa -->
<!-- 0 là admin, 1 là người dùng -->